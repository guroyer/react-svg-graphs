{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "lib": ["dom","es2015"],
        "baseUrl": "src",
        "paths": {
            "utils/*": ["components/utils/*"],
            "graphs/*": ["components/graphs/*"],
            "examples/*": ["examples/*"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}